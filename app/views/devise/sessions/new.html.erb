<div class="rice-paper">
  <div class="form-signin text-center">
    <%= image_tag "logo.png", alt: "alttext", class: "mb-4", style: "width:72px"%>

    <h1 class="h3 mb-3 font-weight-normal" style="font-family:'Roboto Condensed', sans-serif; letter-spacing: 0.1em;">PLEASE SIGN IN</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- <div class="simple_form new_user"> -->

        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" },
                    class: 'form-control sr-only' %>

        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password" },
                    class: 'form-control sr-only' %>

        <div class="checkbox mb-3" style="font-weight:lighter;">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      <!-- </div> -->

      <!-- <div class="form-actions"> -->
      <div class="btn-login btn-lg btn-block">
        <%= f.button :submit, "LOG IN" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
