<div class="container-tree d-flex justify-content-start mt-5 mb-5">
  <div class="tree d-flex flex-row flex-nowrap">

    <ul class='first-list d-flex flex-row flex-nowrap'>
      <% @varieties.each do |variety| %>
        <% if variety.parents.empty? %>
        <li>
          <%= link_to variety.name.upcase, variety_path(variety), class: 'variety-tree' %>
          <ul class='d-flex flex-row flex-nowrap'>
            <% variety.kids.each do |variety_kid| %>
              <% kid = Variety.find(variety_kid.variety_id) %>
              <li>
                <%= link_to kid.name.upcase, variety_path(kid), class: 'variety-tree' %>
                <ul class='d-flex flex-row flex-nowrap'>
                  <% kid.kids.each do |kid_kid| %>
                    <% second_kid = Variety.find(kid_kid.variety_id) %>
                    <li>
                      <%= link_to second_kid.name.upcase, variety_path(second_kid), class: 'variety-tree' %>
                      <ul class='d-flex flex-row flex-nowrap'>
                        <% second_kid.kids.each do |second| %>
                          <% third_kid = Variety.find(second.variety_id) %>
                          <li>
                            <%= link_to third_kid.name.upcase, variety_path(third_kid), class: 'variety-tree' %>
                            <ul class='d-flex flex-row flex-nowrap'>
                              <% third_kid.kids.each do |third| %>
                                <% fourth_kid = Variety.find(third.variety_id) %>
                                <li>
                                  <%= link_to fourth_kid.name.upcase, variety_path(fourth_kid), class: 'variety-tree' %>
                                  <ul class='d-flex flex-row flex-nowrap'>
                                    <% fourth_kid.kids.each do |fourth| %>
                                      <% fifth_kid = Variety.find(fourth.variety_id) %>
                                      <li>
                                        <%= link_to fifth_kid.name.upcase, variety_path(fifth_kid), class: 'variety-tree' %>
