                                                    <%= link_to seventh_kid.name.upcase, variety_path(seventh_kid), class: 'variety-tree' %>

                                                    <ul class='d-flex flex-row flex-nowrap'>
                                                      <% seventh_kid.kids.each do |seventh| %>
