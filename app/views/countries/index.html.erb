      </p>
    </div>
    <br>
    <div class="list-countries d-flex justify-content-center align-items-center">
      <p style="margin: 0px">
        <% @countries = @countries.sort_by { |c| c.name } %>
        <% @countries.each do |country| %>
          <%= link_to country.name, country_path(country), class: "btn btn-warning m-2" %>
        <% end %>
      </p>
    </div>
    <br>
    <br>
  </div>
</div>

