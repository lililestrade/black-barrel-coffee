      id="map"
      style="width: 80%;
      height: 500px;
      margin: auto;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>

  <br>
  <br>
  <br>

  <div class="container-index-countries-list d-flex justify-content-center flex-column">
    <h1 class="text-center">Liste Des Pays Producteurs</h1>
    <br>
    <br>
    <div class='d-flex justify-content-center align-items-center'>
      <% if policy(Country).create? %>
        <%= link_to "Nouveau pays", new_country_path, class: "btn btn-primary" %>
      <% end %>
    </div>
    <br>
    <div class="index-countries-text-one d-flex justify-content-center">
