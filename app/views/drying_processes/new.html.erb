<h1>CRÉATION D'UN NOUVEAU PROCESSUS DE SÉCHAGE</h1>

<hr>

<div class="container">
  <div class="row">
    <div class="card mt-3">
      <%= simple_form_for @drying_process do |f| %>
        <%= f.input :name, label: false, placeholder: "Nom de la méthode" %>
        <%= f.input :process_time, label: false, placeholder: "Combien de temps cela prend-il ?" %>
        <%= f.input :description, label: false, placeholder: "Description de la méthode ..."%>

        <div class =" mt-2 mb-2 d-flex justify-content-center">
          <%= f.submit "Create", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
