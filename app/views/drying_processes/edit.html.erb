<%= render 'shared/navbar' %>
<div class="container">
  <h1 class="text-center">MODIFICATION DE LA MÉTHODE <%= @drying_process.name.upcase %></h1>
  <div class="row">
    <div class="col-md-8 offset-2">
       <%= simple_form_for @drying_process do |f| %>
        <%= f.input :name, label: false, placeholder: "Nom de la méthode" %>
        <%= f.input :process_time, label: false, placeholder: "Combien de temps cela prend-il ?" %>
        <%#= f.input :description, label: false, placeholder: "Description de la méthode ..."%>
        <%= f.text_area :description, label: false, placeholder: "Description de la méthode ..."%>
        <%= f.hidden_field :description, label: false, id: :method_description %>
        <trix-editor input="method_description"></trix-editor>


        <div class =" mt-2 mb-2 d-flex justify-content-center">
          <%= f.submit "Appliquer les mofications", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
